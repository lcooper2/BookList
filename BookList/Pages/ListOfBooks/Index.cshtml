@page // all razor pages must start with this
@model BookList.Pages.ListOfBooks.IndexModel
@{
    ViewData["Title"] = "Index";
}

<br />
<div class="container row">
    <div class="col-6">
        <h2 class="text-info">Book List</h2>
    </div>
    <div class="col-6">
        <a asp-page="Create" class="btn btn-primary text-right">Create New Book</a>
    </div>
</div>
<form method="post">
    @if (Model.Books.Count() > 0)
    {
        <br />
        <br />
        <table class="table table-striped border">
            <tr class="table-secondary">
                <th>@Html.DisplayNameFor(m => m.Books.FirstOrDefault().Name)</th>

                <th>@Html.DisplayNameFor(m => m.Books.FirstOrDefault().Author)</th>

                <th>@Html.DisplayNameFor(m => m.Books.FirstOrDefault().ISBN)</th>
                <th></th>
                </tr>
                @foreach (var item in Model.Books)
                {
                    <tr>
                    <td>@Html.DisplayFor(m => item.Name)</td>
                    <td>@Html.DisplayFor(m => item.Author)</td>
                    <td>@Html.DisplayFor(m => item.ISBN)</td>
                    <td>
                        <button asp-route-id="@item.Id" asp-page-handler="Delete" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to delete this book?')">Delete</button>
                        <a asp-route-id="@item.Id" asp-page="Edit" class="btn btn-success btn-sm">Edit</a>
                    </td>
                    </tr>
                }
        </table>
    }
    else
    {
        <p>No books available.</p>
    }
</form>